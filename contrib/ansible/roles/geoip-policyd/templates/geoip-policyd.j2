{{ ansible_managed | comment }}

# /etc/default/geoip-policyd

VERBOSE="{{ geoippolicyd['verbose'] | default('info') }}"

SERVER_ADDRESS="{{ geoippolicyd['address'] | default('127.0.0.1') }}"
SERVER_PORT="{{ geoippolicyd['port'] }}"
HTTP_ADDRESS="{{ geoippolicyd['http_address'] | default('127.0.0.1:8080') }}"

REDIS_ADDRESS="{{ geoippolicyd['redis_address'] | default('127.0.0.1') }}"
REDIS_PORT="{{ geoippolicyd['redis_port'] | default('6379') }}"
REDIS_DATABASE_NUMBER="{{ geoippolicyd['redis_database_number'] | default('0') }}"

GEOIP_PATH="{{ geoippolicyd['geoip_path'] | default('/usr/share/GeoIP/GeoLite2-City.mmdb') }}"

BLOCKED_NO_EXPIRE="{{ geoippolicyd['blocked_no_expire'] | default('true') }}"

